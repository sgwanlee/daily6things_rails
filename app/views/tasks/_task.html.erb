<%= form_for task, remote: true, html: {"data-priority" => task.priority, "data-task-id" => task.id } do |f| %>
  <% if not task.completed? %>
    <%= fa_icon "bars", class: "bar-icon" %>
  <% end %>
  <%= f.check_box "complete-#{task.id}", checked: task.complete ? true : false %>
  <%= f.label "complete-#{task.id}", task.name %>

  <% if not task.complete %>
    <%= link_to 'x', task, method: :delete, remote: true, class: "delete-link" %>
  <% end %>
  
  
<% end %>